  <header class="site-header">
    <div class="brand">Litter Cleanup Logger</div>
    <nav>
      <ul>
        <% if (currentUser) { %>
          <li><a href="/cleanups">Cleanups</a></li>
          <li><a href="/cleanups/new" class="button">Log cleanup</a></li>
          <li class="user">Signed in as <strong><%= currentUser.username %></strong></li>
          <li>
            <form action="/logout" method="post" class="inline-form">
              <button type="submit" class="linklike">Logout</button>
            </form>
          </li>
        <% } else { %>
          <li><a href="/login">Login</a></li>
          <li><a href="/register">Register</a></li>
        <% } %>
      </ul>
    </nav>
